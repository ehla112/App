<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ActivityVacunas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTituloVacunas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvTituloVacunas"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/etNombreVacuna"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/hint_nombre_vacuna"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etFechaVacuna"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/hint_fecha_vacuna"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etTipoVacuna"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/hint_tipo_vacuna" />

        <Button
            android:id="@+id/btnAddvacuna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnAddvacuna"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnActualizarVacuna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnActvacuna"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnEliminarVacuna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnDeletevacuna"
            android:textColor="@android:color/holo_red_dark"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>