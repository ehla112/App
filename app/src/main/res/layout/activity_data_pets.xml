<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dataPetsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/tvDatosMascota"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:text="@string/tvinfoMascota"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lvDataPets"
            android:layout_width="334dp"
            android:layout_height="252dp" />

        <Button
            android:id="@+id/btneditMascota"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/btneditMascota"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnDeleteMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnDeleteMascota"
            android:textColor="@android:color/holo_red_dark"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnAddMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnAddMascota"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>